<!-- Hero Section -->
<section class="relative w-full h-[80vh] min-h-[500px] mt-16">
  <!-- Hero Image -->
  <div class="absolute inset-0 w-full h-full hero-image">
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black bg-opacity-40"></div>
  </div>

  <!-- Hero Content -->
  <div class="container relative flex flex-col justify-center h-full px-4 mx-auto">
    <div class="max-w-2xl text-white">
      <h1 class="mb-4 text-4xl font-bold md:text-5xl lg:text-6xl">Iluminá tu hogar con estilo</h1>
      <p class="max-w-lg mb-8 text-lg md:text-xl">
        Descubrí nuestra colección de lámparas de diseño que transformarán tus espacios con luz y elegancia.
      </p>
      <%= link_to "Ver catálogo", "#", class: "inline-block px-6 py-3 bg-white text-gray-900 font-medium rounded-md hover:bg-gray-100 transition-colors" %>
    </div>
  </div>
</section>

<!-- Featured Products Section -->
<section class="py-16 bg-gray-50">
  <div class="container px-4 mx-auto">
    <div class="mb-12 text-center">
      <h2 class="mb-4 text-3xl font-bold text-gray-900">Productos Destacados</h2>
      <p class="max-w-2xl mx-auto text-gray-600">
        Descubrí nuestra selección de lámparas más populares, diseñadas para transformar cualquier espacio.
      </p>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
      <%= render partial: "shared/product_card", collection: @featured_products, as: :product %>
    </div>
  </div>
</section>

<!-- Benefits Section -->
<section class="py-12 bg-white">
  <div class="container px-4 mx-auto">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <!-- Benefit 1 -->
      <div class="flex flex-col items-center text-center">
        <div class="p-4 mb-4 bg-gray-100 rounded-full">
          <%= inline_svg_tag "truck", class: "h-8 w-8 text-gray-900" %>
        </div>
        <h3 class="mb-2 text-xl font-semibold">Envíos a todo el país</h3>
        <p class="text-gray-600">Recibí tu compra en la puerta de tu casa, con seguimiento en tiempo real.</p>
      </div>

      <!-- Benefit 2 -->
      <div class="flex flex-col items-center text-center">
        <div class="p-4 mb-4 bg-gray-100 rounded-full">
          <%= inline_svg_tag "credit-card", class: "h-8 w-8 text-gray-900" %>
        </div>
        <h3 class="mb-2 text-xl font-semibold">Hasta 6 cuotas sin interés</h3>
        <p class="text-gray-600">Pagá como quieras: tarjetas de crédito, débito, transferencia o efectivo.</p>
      </div>

      <!-- Benefit 3 -->
      <div class="flex flex-col items-center text-center">
        <div class="p-4 mb-4 bg-gray-100 rounded-full">
          <%= inline_svg_tag "chat", class: "h-8 w-8 text-gray-900" %>
        </div>
        <h3 class="mb-2 text-xl font-semibold">Asesoramiento personalizado</h3>
        <p class="text-gray-600">Contamos con expertos para ayudarte a elegir la iluminación perfecta.</p>
      </div>
    </div>
  </div>
</section>