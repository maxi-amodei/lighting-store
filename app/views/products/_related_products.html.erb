<% if products.present? %>
  <div class="mt-16">
    <h2 class="mb-8 text-2xl font-bold text-gray-900">Productos relacionados</h2>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
      <% products.each do |product| %>
        <div class="flex flex-col p-4 transition-shadow bg-white rounded-lg shadow-sm hover:shadow-md">
          <%= image_tag product[:image], class: "w-full h-48 object-cover rounded-md mb-4" %>
          <h3 class="mb-2 text-lg font-semibold text-gray-900"><%= product[:name] %></h3>
          <p class="text-xl font-bold text-gray-900"><%= product[:price] %></p>
          <%= button_to cart_path, 
              method: :post,
              class: "p-2 bg-gray-900 text-white rounded-md hover:bg-gray-800 transition-colors",
              data: { turbo: false } do %>
            <%= inline_svg_tag("shopping-cart", class: "h-5 w-5") %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %> 