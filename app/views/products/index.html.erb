<div class="max-w-7xl mx-auto p-6 bg-white rounded-lg shadow">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Product Catalog</h1>

  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @products.each do |product| %>
      <div class="border rounded-lg p-4 shadow hover:shadow-lg transition bg-white hover:bg-gray-50">
        <%= image_tag product.image_url, class: "w-full h-40 object-contain mb-2", alt: product.name, loading: "lazy" %>
        <h2 class="text-lg font-semibold text-gray-900"><%= product.name %></h2>
        <p class="text-green-600 font-bold mb-2"><%= number_to_currency(product.price) %></p>
        <%= link_to "View", product_path(product), class: "text-blue-600 hover:underline text-sm" %>
      </div>
    <% end %>
  </div>
</div>
