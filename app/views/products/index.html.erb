<div class="p-6 mx-auto bg-white rounded-lg shadow max-w-7xl">
  <h1 class="mb-6 text-2xl font-bold text-gray-800">Product Catalog</h1>

  <div class="grid grid-cols-2 gap-6 md:grid-cols-3 lg:grid-cols-4">
    <% @products.each do |product| %>
      <div class="p-4 transition bg-white border rounded-lg shadow hover:shadow-lg hover:bg-gray-50" data-controller="cart">
        <%= image_tag product.image_url, class: "w-full h-40 object-contain mb-2", alt: product.name, loading: "lazy" %>
        <h2 class="text-lg font-semibold text-gray-900"><%= product.name %></h2>
        <p class="mb-2 font-bold text-green-600"><%= number_to_currency(product.price) %></p>
        <div class="flex items-center justify-between">
          <%= link_to "View", product_path(product), class: "text-blue-600 hover:underline text-sm" %>
          <button data-action="click->cart#flash" class="px-3 py-1 text-sm text-white transition-colors bg-blue-600 rounded hover:bg-blue-700">
            Test
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
