<div class="max-w-4xl mx-auto p-6">
  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <%= image_tag @product.image_url, class: "rounded-xl shadow w-full h-auto object-contain aspect-[4/3]", alt: @product.name %>
    </div>
    <div>
      <h1 class="text-3xl font-bold mb-2"><%= @product.name %></h1>
      <p class="text-green-700 text-xl font-semibold mb-4"><%= number_to_currency(@product.price) %></p>
      <p class="text-gray-700 mb-6"><%= simple_format(@product.description) %></p>

      <button data-action="click->highlight#flash" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Add to Cart (test)
      </button>
    </div>
  </div>
</div>
