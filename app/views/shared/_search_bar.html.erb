<div class="hidden mt-4 md:block">
  <div class="relative w-64 mx-auto search-wrapper">
    <div class="flex items-center transition-colors duration-200 border border-gray-300 rounded-md search-field bg-gray-50 hover:bg-gray-100 focus-within:bg-gray-100">
      <svg class="w-5 h-5 ml-3 text-gray-400" viewBox="0 0 24 24" aria-hidden="true">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M13.98 15.395a6.294 6.294 0 111.414-1.414l4.602 4.601-1.414 1.414-4.602-4.601zm.607-5.101a4.294 4.294 0 11-8.587 0 4.294 4.294 0 018.587 0z" fill="currentColor"></path>
      </svg>
      <%= form_with url: "#", method: :get, class: "flex-1" do |f| %>
        <%= f.search_field :q, 
                placeholder: "¿Qué estás buscando?", 
                class: "w-full px-3 py-2 bg-transparent focus:outline-none",
                aria: { label: "Buscar productos" },
                role: "combobox",
                maxlength: "150",
                autocomplete: "off",
                autocorrect: "off",
                spellcheck: "false" %>
      <% end %>
      <div class="flex items-center pr-2">
        <button type="button" class="p-2 transition-colors duration-200 rounded-full hover:bg-gray-200" aria-label="Buscar por imagen">
          <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M16.002 13a4 4 0 11-8 0 4 4 0 018 0zm-2 0a2 2 0 11-4 0 2 2 0 014 0z" fill="currentColor"></path>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M9.443 4L7.586 7H3v13h18V7h-4.586l-1.857-3H9.443zm1.114 2h2.886L15.3 9H19v9H5V9h3.7l1.857-3z" fill="currentColor"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>